rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para la carpeta products/
    match /products/{allPaths=**} {
      // Permitir lectura pública para imágenes de productos
      allow read: if true;
      // Permitir escritura a usuarios autenticados
      allow write: if request.auth != null;
    }

    // Reglas para la carpeta businesses/
    match /businesses/{allPaths=**} {
      // Permitir lectura pública para imágenes de negocios
      allow read: if true;
      // Permitir escritura a usuarios autenticados
      allow write: if request.auth != null;
    }

    // Reglas para la carpeta payment-proofs/ (LEGACY)
    match /payment-proofs/{userId}/{allPaths=**} {
      // Permitir lectura a usuarios autenticados
      allow read: if request.auth != null;
      // Permitir escritura solo al propietario del recurso
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para la carpeta stores/
    match /stores/{slug}/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;
      // Permitir escritura solo a usuarios autenticados
      allow write: if request.auth != null;
    }

    // Reglas para la carpeta users/
    match /users/{uid}/{allPaths=**} {
      // Permitir lectura pública
      allow read: if true;
      // Permitir escritura solo al propietario del recurso
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Reglas para la carpeta transfers/
    match /transfers/{userId}/{allPaths=**} {
      // Permitir lectura solo al propietario
      allow read: if request.auth != null && request.auth.uid == userId;
      // Permitir escritura solo al propietario
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para la carpeta comprobantes/
    // ACTUALIZADO: Estructura es comprobantes/{clientId}/{archivo}
    // donde clientId es el ID del cliente de Firestore
    match /comprobantes/{clientId}/{allPaths=**} {
      // Permitir lectura a usuarios autenticados (staff del negocio para verificar)
      allow read: if request.auth != null;
      // Permitir escritura a usuarios autenticados durante checkout
      allow write: if request.auth != null;
    }

    // Regla por defecto para otras carpetas
    match /{allPaths=**} {
      // Permitir lectura pública por defecto
      allow read: if true;
      // Permitir escritura solo a usuarios autenticados
      allow write: if request.auth != null;
    }
  }
}
